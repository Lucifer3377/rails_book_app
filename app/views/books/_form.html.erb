<%= error_messages_for(@book)%>
<div class = "form-group m-2 pt-2">
    <%= label(:author_id,"Author",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10">
        <%= f.select(:author_id,Author.all.collect {|x| [x.name, x.id]},{:include_blank => '****select author****'},:class => "form-control")%>
    </div>
</div>
<div class = "form-group m-2 pt-2">
    <%= label(:name,"Name of Book",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"><%= f.text_field(:name,:class => "form-control",:placeholder => "Enter the Name")%></div>
</div>
<div class = "form-group m-2 pt-2">
    <%= label(:s_desc,"Short Description",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"><%= f.text_field(:s_desc,:class => "form-control",:placeholder => "Small description of upto 20 words.")%></div>
</div>
<div class = "form-group m-2 pt-2 m-5">
    <%= label(:l_desc,"Long Description",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"><%= f.text_area(:l_desc,:class => "form-control",:placeholder => "Long description of upto 100 words.")%></div>
</div>
<div class = "form-group m-2">
    <%= label(:date_of_prod,"Date of Production",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"><%= f.date_select(:date_of_prod,:class => "form-control")%></div>
</div>
<div class = "form-group m-2 pt-2">
    <%= label(:price,"Price",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"><%= f.text_field(:price, :prompt => true,:class => "form-control")%></div>
</div>
<div class = "form-group m-2">
    <%= label(:s_desc,"Genre",:class => "control-label col-sm-2")%>
    <ul class = "col-sm-10">
        <%Book.genre_types.each do |gen|%>
            <li class = "horizontal-list">
                <span class ="justify-content">
                    <%= f.check_box(:genre,{multiple: true},gen, false)%>
                    <%= label :genre, gen,:class => "wordwrap"%>
                    &nbsp;&nbsp;&nbsp;
                </span>
            </li>
        <%end%>
    </ul>
</div>