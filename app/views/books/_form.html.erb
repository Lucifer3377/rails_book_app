<div class="modal-body">
<ul class="errors"></ul>
    <div class = "form-group m-2">
        <%= f.label(:author_id,"Author",:class => "control-label col-sm-2")%>
        <div class = "col-sm-10">
            <%= f.select(:author_id,Author.all.collect {|x| [x.name, x.id]},{:include_blank => '****select author****'}, id: "simple-example",:class => "form-control bigdrop")%>
        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('select#simple-example').select2({
                placeholder: "Choose an Author",
                allowClear: true,
                dropdownCssClass : 'bigdrop',
                theme: "bootstrap"
            });
        });
    </script>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:name,"Name of Book",:class => "control-label col-sm-2")%>
        <div class = "col-sm-10"><%= f.text_field(:name,:class => "form-control",:placeholder => "Enter the Name")%></div>
    </div>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:s_desc,"Short Description",:class => "control-label col-sm-2")%>
        <div class = "col-sm-10"><%= f.text_field(:s_desc,:class => "form-control",:placeholder => "Small description of upto 20 words.")%></div>
    </div>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:l_desc,"Long Description",:class => "control-label col-sm-2")%>
        <div class = "col-sm-10"><%= f.text_area(:l_desc,:class => "form-control",:placeholder => "Long description of upto 100 words.")%></div>
    </div>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:date_of_prod,"Date of Production",:class => "control-label col-sm-2")%>
        <div class = "col-sm-10"><%= f.date_select(:date_of_prod,:class => "form-control")%></div>
    </div>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:price,"Price",:class => "control-label col-sm-2")%>
        <div class = "col-sm-10"><%= f.text_field(:price, :prompt => true,:class => "form-control")%></div>
    </div>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:cover,"Upload Image",:class => "control-label col-sm-2")%>
        <span class = "col-sm-5"><%= f.file_field(:cover,:class => "form-control")%></span>
        <span class = "col-sm-5"><%= image_tag "#{@book.cover.thumb.url}", :class => "form-control scale-50" if @book.cover? %></span>
    </div>
    <div class = "form-group m-2 pt-2">
        <%= f.label(:out_of_stock,"Out of Stock",:class => "control-label col-sm-2")%>
        <span class = "col-sm-2">
            <%= f.radio_button(:out_of_stock, "1",checked: @book.out_of_stock?) %>
            <%= f.label(:out_of_stock, "True") %>
        </span>
        <span class = "col-sm-2">
            <%= f.radio_button(:out_of_stock, "0",checked: !@book.out_of_stock?) %>
            <%= f.label(:out_of_stock, "False") %>
        </span>
    </div>
    <div class = "form-group m-2">
        <%= f.label(:s_desc,"Genre",:class => "control-label col-sm-2")%>
        <ul class = "col-sm-10">
            <%GENRE_TYPES.each do |gen|%>
                <li class = "horizontal-list">
                    <span class ="justify-content">
                        <%= f.check_box(:genre,{multiple: true},gen, false)%>
                        <%= label :genre, gen,:class => "wordwrap"%>
                        &nbsp;&nbsp;&nbsp;
                    </span>
                </li>
            <%end%>
        </ul>
    </div>
</div>
<div class="modal-footer">
<%= f.submit "Submit",class: "btn btn-primary" %>
<%= link_to "Cancel", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
</div>