<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h2 class = "text-center">Filter Options</h2>
        </div>
        <%= form_tag '/books',method: :get,:class => "form-horizontal" do %>
            <div class="modal-body">
                <div class="field">
                    <%= label :search,:name, "Name" %><br />
                    <%= text_field(:search,:name,:class => "form-control") %>
                </div>
                <div class="field">
                    <%= label :search,:genre_type %><br />
                    <%= select(:search,:genre_type,GENRE_TYPES.collect {|x| x},{:include_blank => true},:class => "form-control")%>
                </div>
                <div class="field">
                    <%= label :search,:min_price, "Price Range" %><br />
                    <%= text_field :search,:min_price, size: 10 %> -
                    <%= text_field :search,:max_price, size: 10 %>
                </div>
            </div>
            <div class="modal-footer">
                <%= submit_tag "Search",class: "btn btn-primary" %>
                <%= link_to "Cancel", "#", class: "btn btn-danger", data: {dismiss: "modal"} %>
            </div>
        <% end %>
    </div>
</div>