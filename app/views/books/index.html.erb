<% @page_title = "Book"%>
<div class="container">
        <div id="book-modal" class="modal fade" data-backdrop="static" data-keyboard="false"></div>
        <div class = "row">
            <div class="digg_pagination col-md-4 col-md-offset-4">
                <div class="page_info">
                    <%= page_entries_info @books %>
                </div>
                <%= will_paginate @books, :container => false, :inner_window => 1%>
            </div>
            <%if can? :create, Book%>
                <div class = "col-md-4">
                    <%= link_to(new_book_path,remote: true,:class => "action new btn btn-primary m-top-links") do%>
                        <span class="glyphicon glyphicon-plus"></span> New Book
                    <%end%>     
                </div>
            <%end%>
        </div>
        <div class = "fixed-right">
            <%= link_to(books_search_path,remote: true,:class => "button button5") do%>
            <span class="glyphicon glyphicon-filter"></span>
            <%end%>
        </div>

        <table class = "table">
            <thead class = "thead-inverse pretty" summary = "Book Listing">
                <tr>
                    <th><%= sortable "name"%></th>
                    <th>Author</th>
                    <th>Date of Production</th>
                    <th>Genre</th>
                    <th><%= sortable "price"%></th>
                    <%if can? :update, Book%>
                        <th>Action</th>
                    <%end%>
                </tr>
            </thead>
            <tbody>
                <%@books.each do |book|%>
                    <tr>
                        <td><%= link_to(book.name,book_path(book),:class => "btn list-group-item wordwrap text-capitalize")if can? :read, book%></td>
                        <td><%= link_to(book.author.name,{controller: "authors",action: "show",id: book.author_id},:class => "btn list-group-item wordwrap text-capitalize")if can? :read, Author%></td>
                        <td><%= book.date_of_prod%></td>
                        <td>
                        <ul>
                            <% book.genre.each do |data|%>
                                <li>
                                    <%= data%>
                                </li>
                            <%end%>
                        </ul>
                        </td>
                        <td class = "price"><%= book.price%></td>
                        <%if can? :update, book%>
                            <td>
                                <div class = "col-md-2 btn-group center-div">                    
                                    <%= link_to("Edit",edit_book_path(book),remote: true, :class => "btn btn-primary")%>
                                    <%= link_to("Delete",delete_book_path(book),remote: true,:class => "btn btn-danger")%>
                                </div>
                            </td>  
                        <%end%>  
                    </tr>
                <%end%>
            </tbody>
        </table>
</div>