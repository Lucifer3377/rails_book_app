<% @page_title = "Author"%>
<div class = "">
    <div class = "modal-dialog modal-md">
        <div class = "modal-content">
            <div class = "modal-header">
            <%= link_to({:action => "index"},:class => "btn btn-success") do%>
            <span class="glyphicon glyphicon-arrow-left"></span> Back
            <%end%>
            <br><br>
            <h4 class = "modal-title">Are you sure you want to Remove this Author ?</h4>
            </div>
            <div class = "modal-body">             
                <%= form_tag(:action => "destroy",:id => @author.id) do%>
                <span>Name : <%= @author.name%></span>
            </div>
            <div class = "modal-footer text-center">
                <%= submit_tag("Remove Author",:class => "btn btn-danger")%>
                <%end%>
            </div>
        </div>
    </div>
</div>