
<div class="modal-dialog modal-sm">
  <div class="modal-content">
  <div class="modal-header">
    <h3>Delete Author</h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @author.name %></b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes", author_path(@author), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "No", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>