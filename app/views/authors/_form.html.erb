<%= error_messages_for(@author)%>
<div class = "form-group m-2">
    <%= label(:name,"Name",:placeholder => "Enter your Name",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"><%= f.text_field(:name,:class => "form-control")%></div>
</div>
<div class = "form-group m-2 pt-2"> 
    <%= label(:biography,"Biography",:class => "control-label col-sm-2")%>   
    <div class = "col-sm-10"><%= f.text_area(:biography,:class => "form-control")%></div>
</div>
<div class = "form-group m-2 pt-2">
    <%= label(:academics_list,"Academics",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"> <%= f.text_area(:academics_list,:class => "form-control")%></div>
    <span class = "help-block col-sm-offset-2 col-sm-10">Please enter them separated by comma.</span>
</div>
<div class = "form-group m-2 pt-2">
    <%= label(:awards_list,"Awards",:class => "control-label col-sm-2")%>
    <div class = "col-sm-10"> <%= f.text_area(:awards_list,:class => "form-control")%></div>
    <span class = "help-block col-sm-offset-2 col-sm-10">Please enter them separated by comma.</span>

</div>
<div class = "form-group m-2 pt-2">
    <%= label(:cover,"Upload Image",:class => "control-label col-sm-2")%>
    <span class = "col-sm-5"><%= f.file_field(:cover,:class => "form-control")%></span>
    <span class = "col-sm-5"><%= image_tag "#{@author.cover.thumb.url}", :class => "form-control scale-50" if @author.cover? %></span>
</div>
