<% @page_title = "Author"%>
<nav class = "navbar navbar-inverse">
    <ul class="nav nav-tabs nav-justified">
        <li>
            <div class="text-center text-white">
                <h2>Author Index</h2>
                <h5>(<%= pluralize(@authors.count,"author")%> found )</h5>
            </div>
        </li>
    </ul>
</nav>

<div class = "container">
    <div class = "justify-content-around">
        <%= link_to({:controller => "books", :action => "index"},:class => "btn btn-primary m-top-links") do%>
            <span class="glyphicon glyphicon-ok"></span>  Visit Books Page
        <%end%>
        <%= link_to({:action => "new"},:class => "action new btn btn-primary m-top-links") do%>
        <span class="glyphicon glyphicon-plus"></span> New Author
        <%end%>     
    </div>
    <div class="row text-white well well-sm table-header" summary = "Author Listing">
        <div class = "col-md-4 text-center">Name</div>
        <div class = "col-md-4 text-center">Books</div>
        <div class = "col-md-4 text-center">Action</div>
    </div>
    <div class = "well">
        <%@authors.each do |author|%>
            <div class ="row list-group <%= cycle('odd','even')%>">
                <div class = "col-md-4">
                    <%= link_to(author.name,{:action => "show", :id => author.id},:class => "btn list-group-item")%>
                </div>
                <div class = "col-md-4 text-center"><%= author.books.count%></div>
                <div class = "col-md-4 btn-group text-center">
                    <%= link_to("Edit",{:action => "edit", :id => author.id},:class => "btn btn-primary text-center")%>
                    <%= link_to("Delete",{:action => "delete", :id =>author.id},:class => "btn btn-danger text-center")%>
                </div>
            </div>
        <%end%>
    <div>
