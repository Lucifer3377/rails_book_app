<% @page_title = "Author"%>
<div class = "container">
    <div id="author-modal" class="modal fade" data-backdrop="static" data-keyboard="false"></div>
    <div class = "row">
        <div class="digg_pagination col-md-4 col-md-offset-2">
            <div class="page_info">
                <%= page_entries_info @authors %>
            </div>
            <%= will_paginate @authors, :container => false, :inner_window => 1 %>
        </div>
        <%if can? :create, Author%>
            <div class = "col-md-2">
                <%= link_to(new_author_path,remote: true,:class => "action new btn btn-primary m-top-links") do%>
                    <span class="glyphicon glyphicon-plus"></span> New Author
                <%end%>
            </div>
            <div class = "col-md-3">
                <%= form_tag(import_authors_path, method: :post,:multipart => true,:class => "form-inline") do%>
                    <div class = "input-group">
                        <%= file_field_tag :file,:class => "form-control" %>
                        <span class = "input-group-btn">
                        <%= button_tag(name: nil, data:{disable_with: "Importing...."}, :class => "btn btn-primary") do%>
                            <i class="glyphicon glyphicon-import"></i>
                        <%end%>
                        </span>
                    </div>
                <% end %>
            </div>
        <%end%>
    </div>
    <div class = "fixed-right">
            <%= link_to(authors_search_path,remote: true,:class => "button button5") do%>
            <span class="glyphicon glyphicon-filter"></span>
            <%end%>
        </div>
    <table class = "table">
            <thead class = "thead-inverse pretty" summary = "Book Listing">
                <tr class ="<%= cycle('odd','even')%>">
                    <th><%= sortable "name"%></th>
                    <th>Books</th>
                    <%if can?(:update, Author)%>
                        <th>Action</th>
                    <%end%>
                </tr>
            </thead>
            <tbody>
                <%@authors.each do |author|%>
                    <tr>
                    <td><%= link_to(author.name,author_path(author),:class => "btn list-group-item text-capitalize") if can? :read, author%></td>
                    <td>
                    <%if author.books.count > 0%>
                        <%= link_to(author.books.count,{controller: "books",action: "index",author_id: author.id},:class => "btn list-group-item wordwrap")if can? :read, Book%></td>
                    <%else%>
                        <%= author.books.count%>
                    <%end%>
                    <%if can? :update, author%>
                        <td>
                            <div class = "col-md-2 btn-group center-div">
                                <%= link_to("Edit",edit_author_path(author),remote: true,:class => "btn btn-primary")%>
                                <%= link_to("Delete",delete_author_path(author), :remote => true, :class => "btn btn-danger")%>
                            </div>
                        </td>
                    <%end%>
                    </tr>
                <%end%>
            </tbody>
    </table>    
<div>
