<div>
    <div class = "page-header justify-content-end">
        <span><h1>REVIEWS</h1></span>
    </div>
    <div class = "row well well-sm table-header text-center text-white">
        <div class = "col-md-2">
            Name
        </div>
        <div class = "col-md-2">
            Title
        </div>
        <div class = "col-md-6">
            Description
        </div>
        <div class = "col-md-1">
            Rate(Out of 5)
        </div>
        <div class = "col-md-1">
            Created
        </div>
    </div>
    <%@reviews.each do |review|%>
        <div class = "row well text-center">
            <div class = "col-md-2">
                <%= review.name%>
            </div>
            <div class = "col-md-2">
                <%= review.title%>
            </div>
            <div class = "col-md-6">
                <%= review.desc%>
            </div>
            <div class = "col-md-1">
                <%= review.star_rate%>
            </div>
            <div class = "col-md-1">
                <%= review.created_at%>
            </div>
        </div>
    <%end%>
</div>
